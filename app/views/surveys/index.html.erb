<div class="row">
  <div class="col-sm-12">
    <h1><%= Survey.model_name.human.pluralize %></h1>
    <br />
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t('name') %></th>
          <th><%= t('start_date') %></th>
          <th><%= t('end_date') %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @surveys.each do |survey| %>
          <tr>
            <td><%= survey.name %></td>
            <td><%= survey.start_date %></td>
            <td><%= survey.end_date %></td>
            <td class="actions-td">
              <%= link_to t('edit'), edit_survey_path(survey), class: 'btn btn-primary' %>
              <%= link_to t('destroy'), survey, method: :delete, data: { confirm: t('confirmation') }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t('new_survey'), new_survey_path, class: 'btn btn-primary' %>
  </div>
</div>