<%= simple_form_for [@survey, @question] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :question_text %>
  	<%= f.input :question_type, collection: Question.question_types.keys, include_blank: false, label_method: lambda {|type| t(type) } %>
  	<%= f.input :answer_options, as: :text %>
    <%= f.input :description, as: :text %>
    <%= f.input :position %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
